{
  "manifest_version": 2,
  "name": "GAMX Firefox Extension",
  "version": "2.0.2",
  "description": "Comprehensive API monitoring, documentation, and security analysis tool for Firefox",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "clipboardWrite",
    "<all_urls>"
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    "security-rules.json"
  ],
  "background": {
    "scripts": ["config.js", "security-analyzer.js", "response-capture.js", "background.js"],
    "persistent": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gamx-extension@example.com",
      "strict_min_version": "78.0"
    }
  }
}
